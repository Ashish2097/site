<article class="speakerslist">
	<section class="layout">
		<div class="speakers">
			<% artists.forEach(function(item) { %>
				<article class="artist group">
					<h3><a href="/speakers/<%= item.shortname %>"><%= item.title %></a><span class="small">with <%= item.name %></span></h3>
					<p><a href="/speakers/<%= item.shortname %>">
						<img class="speakers" src="/images/speakers/<%= item.shortname %>.jpg" alt="Photo of <%= item.name %>"></a>
						<% if(page != 'home') { %>
							<% if(page === 'artistList') { %>
								<%= item.summary %>
							<% } else { %>
								<%- item.description %>
							<% } %> 
						<% } %>
					</p>
				</article>
		<% }) %>
		</div>
	</section>
</article>